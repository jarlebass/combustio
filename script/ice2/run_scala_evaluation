--num-executors 27 \
--executor-cores 4 \
--conf spark.kryoserializer.buffer.max=256m \
app.jar "csem" \
-lo /state/partition1/tmp/ \
-ho hdfs://nameservice1/user/jfa012/out/ \
-j $1 \
-i hdfs://nameservice1/user/jfa012/enwiki-latest-pages-articles.xml* \
-npart 600 \
-u myId \
-r $2 \
-m n

